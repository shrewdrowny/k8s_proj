pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        DOCKERHUB_REPO = "shrewdrowny/djangoapp"
    }

    triggers {
        pollSCM('H/1 * * * *')   // GitHub webhook 사용 시 제거 가능
    }

    stages {

        stage('Clone Repository') {
            steps {
                echo "Git Repo 최신 내용 가져오기"
                checkout scm
            }
        }

        stage('Set Version') {
            steps {
                script {
                    // Jenkins 빌드번호 기반 버전
                    VERSION = "v${BUILD_NUMBER}"
                    IMAGE_TAG = "${DOCKERHUB_REPO}:${VERSION}"

                    echo "새 Docker 이미지 버전: ${IMAGE_TAG}"
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh """
                    docker build -t ${IMAGE_TAG} .
                    """
                }
            }
        }

        stage('Docker Login') {
            steps {
                script {
                    sh """
                    echo "${DOCKERHUB_CREDENTIALS_PSW}" | docker login -u "${DOCKERHUB_CREDENTIALS_USR}" --password-stdin
                    """
                }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    sh """
                    docker push ${IMAGE_TAG}
                    """
                }
            }
        }
	stage('Update ArgoCD Git Repo') {
            steps {
                script {
                    // 1) git 사용자 정보 설정 (로컬 repo 기준)
                    sh '''
                      git config user.email "soyongjun00@gmail.com"
                      git config user.name "shrewdrowny"
                    '''

                    // 2) deployment.yaml의 image 태그를 새 IMAGE_TAG로 교체
                    sh """
                      sed -i 's|image: shrewdrowny/djangoapp:.*|image: ${IMAGE_TAG}|' k8s/deploy.yaml
                    """

                    // 3) 변경된 파일 git add + commit
                    sh '''
                      git add k8s/deploy.yaml
                      git commit -m "CI: Update djangoapp image tag [skip ci]" || echo "No changes to commit"
                    '''

                    // 4) Jenkins Credentials로 Git push
                    //    -> username/password 타입 Credentials 예시
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'github',
                            usernameVariable: 'GIT_USERNAME',
                            passwordVariable: 'GIT_AUTH_TOKEN'
                        )
                    ]) {
                        sh '''
                          git push https://$GIT_USERNAME:$GIT_AUTH_TOKEN@github.com/shrewdrowny/k8s_proj.git HEAD:main
                        '''
                    }

                    echo "Git Repository에 이미지 태그 업데이트 및 푸시 완료. 이제 ArgoCD가 변경을 감지해서 배포를 진행합니다."
                }
            }
        }
    }

    post {
        success {
            echo "성공적으로 Docker Hub에 push 및 ArgoCD로 배포 완료!"
        }
        failure {
            echo "빌드 실패! 로그를 확인하세요."
        }
    }
}

